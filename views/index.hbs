<h1 class="text-center">{{title}}</h1>
<form id="pdfForm" class="form-horizontal" action="/" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<label for="outputName" class="col-sm-2 control-label">Output file name</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="outputName" name="outputName" required="required" placeholder="Output.pdf">
		</div>
	</div>

	<div class="form-group pdf" data-num="1">
		<label for="pdf1" class="col-sm-2 control-label">PDF 1</label>
		<div class="col-sm-10">
			<input type="file" id="pdf1" name="pdf1" accept="application/pdf,*.pdf" required="required" />
		</div>
	</div>

	<div class="form-group pdf" data-num="2">
		<label for="pdf2" class="col-sm-2 control-label">PDF 2</label>
		<div class="col-sm-10">
			<input type="file" id="pdf2" name="pdf2" accept="application/pdf,*.pdf" required="required" />
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="button" class="btn btn-info btn-add-pdf">Add Another PDF</button>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-success">Upload</button>
			<button type="button" class="btn btn-danger btn-reset">Reset</button>
		</div>
	</div>
</form>